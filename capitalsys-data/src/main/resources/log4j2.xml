<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
	<Properties>
		<Property name="log.file.location">D:/Sistema/logs</Property>
	</Properties>
	<Appenders>
		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36}- linea [%L] -  %msg%n" />
		</Console>
		<!-- con esta configuracion los acrchivos se van a crear cuando la fecha es diferente a la fecha
		del archivo semilla Capitalsys.log y cuando el archivo supera los 30 mb 
		https://mkyong.com/logging/log4j2-xml-example/
		-->
		<RollingFile name="LogToFile"
			fileName="${log.file.location}/Capitalsys.log"
			filePattern="${log.file.location}/Capitalsys.%d{dd-MM-yyyy}.log"
			ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36}- linea [%L] -
					%msg%n</Pattern>
			</PatternLayout>
			<Policies>
				
				<TimeBasedTriggeringPolicy interval="1" />
				<SizeBasedTriggeringPolicy size="30 MB" />
			</Policies>
			<DefaultRolloverStrategy max="5" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="py.com.capitalsys" level="debug"
			additivity="false">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="LogToConsole" />
			<AppenderRef ref="LogToFile" />
		</Root>
	</Loggers>
</Configuration>


